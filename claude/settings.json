{
  "alwaysThinkingEnabled": true,
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(git:*)",
      "Bash(yarn:*)",
      "Bash(bun run:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Read(./.env)"
    ]
  },
  "attribution": {
    "pr": "",
    "commit": ""
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/bash ~/.config/claude/statusline-command.sh"
  }
}
